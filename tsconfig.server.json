{
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": true,
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "preserve",
    "types": ["jest","node"],
    "lib": [
      "es6",
      "es2017.object",
      "es2016",
      "es2017",
      "DOM"
    ],
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop":true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.*",
    "src/**/*.test.*"
  ]
}
