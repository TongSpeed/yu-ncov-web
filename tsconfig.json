{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "dist",
    "jsx": "preserve",
    "types": ["jest"],
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": false,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "server/**/*.ts"
  ]
}
